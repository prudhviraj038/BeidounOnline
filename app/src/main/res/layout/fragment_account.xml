<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/myorders_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_grey_rounded"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/orderbox" />

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/orders_myaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDERS"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/orders_des_myaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="VIEW YOUR ORDER INFO"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mywishlist_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_grey_rounded"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/wish"
                android:tint="@android:color/black" />

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/wishlist_myaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WISHLIST"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/wishlist_des_myaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="VIEW AND MODIFY ITEMS ON YOUR WISHLIST"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/usrinfo_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_grey_rounded"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/user1"
                android:tint="@android:color/black" />

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/personalinfo_myaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERSONAL INFO"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/personalinfo_des_myaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="MANAGE YOUR LOGIN AND EMAIL INFO"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/address_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_grey_rounded"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/address"
                android:tint="@android:color/black" />

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/address_myaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESSES"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/address_des_myaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="MANAGE YOUR BILLING AND DELIVERY"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/points_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/corners_grey_rounded"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/points"
            android:tint="@android:color/black" />

        <com.yellowsoft.newproject.CustomTextView
            android:id="@+id/loyality_myaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOYALITY POINTS"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <com.yellowsoft.newproject.CustomTextView
            android:id="@+id/loyality_des_myaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="VIEW YOUR POINTS INFORMATION"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>