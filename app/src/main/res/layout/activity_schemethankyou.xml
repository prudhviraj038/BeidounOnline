<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.yellowsoft.newproject.CustomTextView
        android:id="@+id/customTextView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="THANKYOU"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        app:font_name="Gothambook" />

    <com.yellowsoft.newproject.CustomTextView
        android:id="@+id/customTextView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="FOR JOINING OUR"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:font_name="Gothambook" />

    <com.yellowsoft.newproject.CustomTextView
        android:id="@+id/referaltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="REFERRAL SCHEME"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:font_name="Gothambook" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.yellowsoft.newproject.CustomTextView
            android:id="@+id/customTextView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Transaction ID: "
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:font_name="Gothambook" />

        <com.yellowsoft.newproject.CustomTextView
            android:id="@+id/successreferal_trans_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MC12311"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:font_name="Gothambook" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:src="@drawable/successref" />

    <com.yellowsoft.newproject.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/schemeSuccess_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>
    <com.yellowsoft.newproject.CustomTextView
        android:id="@+id/codetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Your Permanent Referral Code"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        app:font_name="Gothambook" />

    <com.yellowsoft.newproject.CustomTextView
        android:id="@+id/customTextView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shareText"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/codeshare_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_corners_lack"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.yellowsoft.newproject.CustomTextView
            android:id="@+id/success_ref_membercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="MEMBER_CODE"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:font_name="Gothambook" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/sharre"
            android:tint="@android:color/white" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/backtohome_ll_btn_scheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.yellowsoft.newproject.CustomTextView
            android:id="@+id/customTextView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="BACK TO HOME"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>