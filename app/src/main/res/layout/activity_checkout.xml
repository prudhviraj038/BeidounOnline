<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/checkout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.yellowsoft.newproject.CustomTextView
                    android:id="@+id/customTextView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Payment"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <com.yellowsoft.newproject.CustomTextView
                        android:id="@+id/customTextView42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Products" />

                    <com.yellowsoft.newproject.CustomTextView
                        android:id="@+id/customTextView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Total" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/myorders_rv_checkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:divider="@drawable/divider_grey"
                        android:orientation="vertical"
                        android:showDividers="middle|end">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <com.yellowsoft.newproject.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="SubTotal"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/subtotal_tv_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/countrycode_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="KD"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/customTextView87"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Shipping"
                                android:textColor="@color/colorlightGrey"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/shipping_tv_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorlightGrey"
                                    android:textSize="12sp" />

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/countrycode_ckeckout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="KD"
                                    android:textColor="@color/colorlightGrey"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/customTextView87"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Discount"
                                android:textColor="@color/colorlightGrey"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/discount_tv_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/colorlightGrey"
                                    android:textSize="12sp" />

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/countrycode_dis_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="KD"
                                    android:textColor="@color/colorlightGrey"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:divider="@drawable/divider_grey"
                            android:orientation="horizontal"
                            android:showDividers="beginning|end">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/customTextView87"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                app:font_name="Gothamlight" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/total_tv_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />

                                <com.yellowsoft.newproject.CustomTextView
                                    android:id="@+id/countrycode_total_checkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="KD"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/customTextView101"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deliverey time 1 - 2 days" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.yellowsoft.newproject.CustomTextView
                                android:id="@+id/customTextView105"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="Your payment mode" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/visa_ll"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/checked_visa_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:visibility="gone"
                                        app:srcCompat="@drawable/checked" />

                                    <ImageView
                                        android:id="@+id/checkoff_visa_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        app:srcCompat="@drawable/check" />

                                    <ImageView
                                        android:id="@+id/imageView13"
                                        android:layout_width="75dp"
                                        android:layout_height="25dp"

                                        android:adjustViewBounds="false"
                                        app:srcCompat="@drawable/visa" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/cod_ll"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/checked_cod_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:visibility="gone"
                                        app:srcCompat="@drawable/checked" />

                                    <ImageView
                                        android:id="@+id/checkoff_cod_img"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        app:srcCompat="@drawable/check" />

                                    <ImageView
                                        android:id="@+id/imageView25"
                                        android:layout_width="50dp"
                                        android:layout_height="25dp"
                                        android:adjustViewBounds="false"
                                        android:src="@drawable/cash" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/knet_ll"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/checked_knet_img"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/checked" />

                                <ImageView
                                    android:id="@+id/checkoff_knet_img"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    app:srcCompat="@drawable/check" />

                                <ImageView
                                    android:id="@+id/imageView25"
                                    android:layout_width="50dp"
                                    android:layout_height="25dp"
                                    android:adjustViewBounds="false"
                                    app:srcCompat="@drawable/knet" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/payconfirm_ll_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@android:color/black"
            android:gravity="center"
            android:orientation="vertical">

            <com.yellowsoft.newproject.CustomTextView
                android:id="@+id/customTextView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Next Step"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>